<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Bloomz_Test_Run" verbose="1" parallel="false">

	<test name="BVT Testcases on Android">
		<parameter name="platformName" value="Android"></parameter>
		<parameter name="browserType" value=""></parameter>
		<groups>
			<run>
				<include name="android" />
			</run>
		</groups>
		<classes>
			<class name="com.net.bloomz.tests.BVT_SmokeTest" />
		</classes>
	</test>
	<test name="BVT Testcases on chrome">
		<parameter name="platformName" value="Web"></parameter>
		<parameter name="browserType" value="CHROME"></parameter>
		<groups>
			<run>
				<include name="web" />
			</run>
		</groups>
		<classes>
			<class name="com.net.bloomz.tests.BVT_SmokeTest" />
		</classes>
	</test>
	<test name="BVT Testcases on safari">
		<parameter name="platformName" value="Web"></parameter>
		<parameter name="browserType" value="SAFARI"></parameter>
		<groups>
			<run>
				<include name="web" />
			</run>
		</groups>
		<classes>
			<class name="com.net.bloomz.tests.BVT_SmokeTest" />
		</classes>
	</test>



</suite>